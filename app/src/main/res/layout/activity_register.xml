<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">
    <ImageView
        android:layout_width="115dp"
        android:layout_height="135dp"
        android:background="@drawable/tahubulet"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/r_radius24"
        android:paddingTop="48dp"
        android:paddingBottom="48dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="52dp"
            android:background="@drawable/logo_app"
            android:layout_gravity="center_horizontal"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="Register"
            android:textSize="22sp"
            android:textColor="@color/whitedoff"
            android:fontFamily="@font/poppins_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="Daftar akun untuk login"
            android:textSize="12sp"
            android:textColor="@color/whitedoff"
            android:fontFamily="@font/poppins_bold"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal"
            android:background="@drawable/r_two"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/phone"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:hint="Nomor Telepon"
                android:textSize="12sp"
                android:background="@null"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal"
            android:background="@drawable/r_two"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/user"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:hint="Username"
                android:textSize="12sp"
                android:background="@null"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal"
            android:background="@drawable/r_two"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/lock"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:hint="Password"
                android:textSize="12sp"
                android:background="@null"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:fontFamily="@font/poppins_bold"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/eye_close"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal"
            android:background="@drawable/r_two"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/lock"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:hint="Konfirmasi Password"
                android:textSize="12sp"
                android:background="@null"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:fontFamily="@font/poppins_bold"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/eye_close"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal"
            android:background="@drawable/r_radius40"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="20sp"
                android:textColor="@color/whitedoff"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="0"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun?"
                android:textSize="12sp"
                android:textColor="@color/whitedoff"
                android:fontFamily="@font/poppins_medium"/>
            <View
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk"
                android:textSize="12sp"
                android:textColor="@color/blue_two"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="115dp"
        android:layout_height="135dp"
        android:background="@drawable/tahubulet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:rotation="180"/>
</RelativeLayout>